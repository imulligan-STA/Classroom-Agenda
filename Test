<script>
  // Example data from your spreadsheet
  const data = [
    {section:"focus", icon:"📝", title:"Student Feedback Sessions", description:"Share your thoughts on the previous units and pacing."},
    {section:"focus", icon:"💸", title:"Economic Challenges & Solutions", description:"Deep dive into The Panic of 1819 and The American System."},
    {section:"focus", icon:"✅", title:"Formative Assessments", description:"Complete and review sections 4.3, 4.4, and 4.5."},
    {section:"next", icon:"⭐", title:"AP Classroom Quizzes", description:"Start with a short quiz to gauge understanding."},
    {section:"next", icon:"💬", title:"The Rise of Andrew Jackson I", description:"Discussion on the early life and political ascent of Jackson."}
  ];

  data.forEach(item => {
    const container = document.getElementById(item.section + "-section");
    const div = document.createElement("div");
    div.className = "item";
    div.innerHTML = `<div class="icon">${item.icon}</div>
                     <div class="content"><h3>${item.title}</h3><p>${item.description}</p></div>`;
    container.appendChild(div);
  });
</script>

